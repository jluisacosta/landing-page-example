.content
    margin 64px 0 0 0
    transition all .3s ease

    &-features
        padding 0

    &-block
        padding 1em
        border-left 6px solid #DEDEDE
        border-bottom 1px solid #DEDEDE

        &:hover
            background-color #DEDEDE

        &:nth-child(1)
            border-left-color green
        &:nth-child(2)
            border-left-color red
        &:nth-child(3)
            border-left-color blue
        &:nth-child(4)
            border-left-color orange

    &-text
        &-image
            picture
                margin 0 auto

                img
                    width 100%

@media (min-width: 768px)
    .content
        margin 80px 0 0 0

        &-features
            display flex

        &-block
            width 25%

        &-text
            &-image
                display flex

                picture
                    margin 1em
                    order 1
                    width 30%

                p
                    order 2
                    width 70%
                    margin 1em
